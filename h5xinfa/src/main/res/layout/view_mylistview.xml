<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="0dp"
        android:layout_height="@dimen/right_height"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ll2"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/right_img_size"
            android:layout_height="@dimen/right_img_size"
            android:src="@mipmap/lc" />


        <TextView
            style="@style/right_tv"
            android:text="财富管理" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="0dp"
        android:layout_height="@dimen/right_height"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/ll1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/right_img_size"
            android:layout_height="@dimen/right_img_size"
            android:src="@mipmap/gjs" />

        <TextView
            style="@style/right_tv"
            android:text="小浦金店" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="0dp"
        android:layout_height="@dimen/right_height"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ll4"
        app:layout_constraintTop_toBottomOf="@+id/ll1">

        <ImageView
            android:layout_width="@dimen/right_img_size"
            android:layout_height="@dimen/right_img_size"
            android:src="@mipmap/rmb" />

        <TextView
            style="@style/right_tv"
            android:text="人民币存款利率" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="0dp"
        android:layout_height="@dimen/right_height"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/ll3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll2">

        <ImageView
            android:layout_width="@dimen/right_img_size"
            android:layout_height="@dimen/right_img_size"
            android:src="@mipmap/etc" />

        <TextView
            style="@style/right_tv"
            android:text="浦发ETC" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="0dp"
        android:layout_height="@dimen/right_height"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ll6"
        app:layout_constraintTop_toBottomOf="@+id/ll3">

        <ImageView
            android:layout_width="@dimen/right_img_size"
            android:layout_height="@dimen/right_img_size"
            android:src="@mipmap/zs" />

        <TextView
            style="@style/right_tv"
            android:text="普及金融" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="0dp"
        android:layout_height="@dimen/right_height"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/ll5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll4"></LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>